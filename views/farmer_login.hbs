
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="fas fa-sign-in-alt"></i> تسجيل دخول المزارع</h3>
            </div>
            
            <div class="card-body">
                <form action="/farmer/login" method="POST">
                    <div class="mb-3">
                        <label class="form-label">رقم الهوية الوطنية</label>
                        <input type="text" name="national_id" class="form-control" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">كلمة المرور</label>
                        <input type="password" name="password" class="form-control" required>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt"></i> دخول
                        </button>
                    </div>
                </form>
                
                <div class="mt-3 text-center">
                    <a href="/farmer/register" class="text-decoration-none">
                        ليس لديك حساب؟ سجل الآن
                    </a>
                    <hr>
                    <a href="/farmer/forgot-password" class="text-decoration-none text-danger">
                        <i class="fas fa-key"></i> نسيت كلمة المرور؟
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
