<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="fas fa-user-plus"></i> تسجيل مزارع جديد</h3>
            </div>
            
            <div class="card-body">
                {{#each errors}}
                <p style="color: red">{{this.msg}}</p>
                {{/each}}
                
                <form action="/farmer/register" method="POST">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">الاسم الأول</label>
                            <input type="text" name="first_name" class="form-control" required
                                   value="{{oldInput.first_name}}">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">اسم العائلة</label>
                            <input type="text" name="last_name" class="form-control" required
                                   value="{{oldInput.last_name}}">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">رقم الجوال</label>
                            <input type="tel" name="phone" class="form-control" required
                                   value="{{oldInput.phone}}">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">رقم الهوية الوطنية</label>
                            <input type="number" name="national_id" class="form-control" required
                                   value="{{oldInput.national_id}}">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">كلمة المرور</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">تأكيد كلمة المرور</label>
                            <input type="password" name="confirm_password" class="form-control" required>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-user-check"></i> تسجيل الحساب
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
